      </DataColumn>
    </DataGrid>
    <Dialog id="diaShifeirequestacc">
      <ClientEvent name="onClose">var cur=view.id('dsShifeirequestacc').getData('#');&#xD;
				cur.cancel();&#xD;
				view.id('diaShifeirequestacc').hide();&#xD;
	         </ClientEvent>
